            <apex:commandButton value="{!$Label.New_Account}" onclick="return createNewAccount();" disabled="{!IF(showAccountButton = true, false, true)}"/>
        <apex:commandButton action="{!cancel}" value="{!$Label.Cancel}"  onclick="return goToBack();"/>
        
        <apex:actionStatus id="status">
