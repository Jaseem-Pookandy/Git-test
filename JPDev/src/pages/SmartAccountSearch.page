<apex:page standardController="Account" extensions="SmartAccountSearchExtension" sidebar="true" tabstyle="Account" id="pg">
    <apex:sectionHeader title="{!$Label.Account}" subtitle="{!$Label.Smart_Account_Search}"/>
    <apex:form id="frm">
        <script>
          // Character limits of search product for all fields
          var searchCharacterLimit = 2; <!-- Dec04-2012 by nojha@appirio.com: Changed the value to 2 from 3 -->
        </script>
        <!-- 
        <div>
            <span><apex:outputText value="{!$Label.SmartAccountSearch_Header}" escape="false" /></span>
