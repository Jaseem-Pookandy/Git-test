<apex:page standardController="Release__c" >

    <apex:define name="Header">
            <apex:sectionHeader title="{!$ObjectType.Release__c.label} Admin Console" subtitle="Release : {!Release__c.Version__c}"/>
    </apex:define>

    <apex:form >
        <apex:pageBlock mode="detail" title="Items that were part of this release" >

            <apex:pageBlockButtons >
                <apex:commandButton value="Save" action="{!Save}"/>
                <apex:commandButton value="Cancel" action="{!Cancel}"/>
            </apex:pageBlockButtons>

            <apex:pageBlockSection columns="1" >
                <apex:pageBlockTable value="{!Release__c.Release_Items__r}" var="items">
                    <apex:column >
                        <apex:outputLink value="{!items.Name}">{!items.Name}</apex:outputLink>
                    </apex:column>    
                    <apex:column headerValue="Ticket Number" >
                        <apex:inputField value="{!items.Ticket_Number__c}"/>
                    </apex:column>
                    <apex:column headerValue="Short Description" >
                        <apex:inputField value="{!items.Short_Description__c}"/>
                    </apex:column>
                    <apex:column headerValue="Long Description" >
                        <apex:inputField value="{!items.Long_Description__c}"/>
                    </apex:column>
                    <apex:column headerValue="Priority" >
                        <apex:inputField value="{!items.Priority__c}"/>
                    </apex:column>
                    <apex:column headerValue="Governance Category" >
                        <apex:inputField value="{!items.Governance_Category__c}"/>
                    </apex:column>
                    <apex:column headerValue="Resource Category" >
                        <apex:inputField value="{!items.Resource_Category__c}"/>
                    </apex:column>
                    <apex:column headerValue="Status" >
                        <apex:inputField value="{!items.Status__c}"/>
                    </apex:column>
                    <apex:column headerValue="Release" >
                        <apex:inputField value="{!items.Release__c}"/>
                    </apex:column>
                    <apex:column headerValue="Date Deployed" >
                        <apex:inputField value="{!items.Date_Deployed__c}"/>
                    </apex:column>             

                </apex:pageBlockTable>
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>