<apex:page standardController="zqu__Quote__c" extensions="PropertyComponentSample" sidebar="true" showHeader="true">			
  	
	                			
  <!-- QuoteWizardTemplate -->
  <apex:composition template="zqu__QuoteWizardTemplateNoForm" >
  	<!-- Define the page body, including form and button bar -->
    <apex:define name="PageBody" >
  	
	  <apex:form id="quoteForm">	  	
	    <zqu:PropertyComponent options="{!theOptions}">
	      
	      <!-- Custom Rendered Fields -->
	      <apex:outputPanel styleClass="customRenderedFieldPanel" rendered="{!IF(field.name == 'zqu__RenewalTerm__c', true, false)}">
	        <apex:outputPanel style="float: left; padding-top: 0px; width: {!IF(fieldSet.isSingleColumn, '17.1%','34.5%')};" styleClass="labelCol">
	          <apex:outputLabel style="margin-right: 10px;">{!field.label}</apex:outputLabel>
	        </apex:outputPanel>
	        <apex:inputField value="{!quote.zqu__RenewalTerm__c}"
	                         required="{!field.isRequired}"
	                         onchange="displayStatusModal();changeCustomPicklist(this.options[this.selectedIndex].value);" 
	                         rendered="{!theOptions.isEditMode}"/>
	        <apex:outputField value="{!quote.zqu__RenewalTerm__c}" rendered="{!NOT(theOptions.isEditMode)}"/>
	      </apex:outputPanel>
	      
	      <apex:outputPanel id="customTextField" styleClass="customRenderedFieldPanel" rendered="{!IF(field.name == 'zqu__AutoRenew__c', true, false)}">
	        <apex:outputPanel style="float: left; padding-top: 0px; width:{!IF(fieldSet.isSingleColumn, '17.1%','34.5%')};" styleClass="labelCol">
	          <apex:outputLabel style="margin-right: 10px;">{!field.label}</apex:outputLabel>
	        </apex:outputPanel>
	        <apex:inputField value="{!quote.zqu__AutoRenew__c}" required="{!field.isRequired}" rendered="{!theOptions.isEditMode}"/>
	        <apex:outputField value="{!quote.zqu__AutoRenew__c}" rendered="{!NOT(theOptions.isEditMode)}"/>
	      </apex:outputPanel>
	     

		
<!-- Render Initial Term only when Subscription Term Type is Termed -->

	<apex:outputPanel html-data-id="customRenderedTermType" styleClass="customRenderedFieldPanel">
		<apex:outputPanel style="float: left; padding-top: 0px; width:{!IF(fieldSet.isSingleColumn, '17.1%','34.5%')};" styleClass="labelCol">
                  <apex:outputLabel style="margin-right: 10px;">Subscription Term Type</apex:outputLabel>
        </apex:outputPanel>
                <apex:inputField html-data-id="subTermType" value="{!quote.zqu__Subscription_Term_Type__c}"
                                 required="{!field.isRequired}"                                 
                                 style="margin-left: -3px;"/>
	</apex:outputPanel>
		 	
	<apex:outputPanel html-data-id="initialTerm_{!fieldSet.isSingleColumn}" id="initialTerm">
    	<apex:outputPanel style="float: left; padding-top: 0px; width:{!IF(fieldSet.isSingleColumn, '17.1%','34.5%')};" styleClass="labelCol">
        	       	<div html-data-id="iniTerm1"> 
                  		<apex:outputLabel style="margin-right: 10px;">{!field.label}</apex:outputLabel>
                  	</div>
        </apex:outputPanel>
        <apex:inputField html-data-id="iniTerm2" value="{!quote.zqu__InitialTerm__c}" style="margin-left: -3px;"/>               	 
    </apex:outputPanel>
       
</zqu:PropertyComponent>

		<script>
 		  	var $jq = jQuery.noConflict();
 		  	$jq(document).ready(function(){
	 		  	document.querySelectorAll('[data-id = "subTermType"]')[0].onchange=function(event){
	 		  	   if($jq(event.target).val() != 'Termed'){
	 		  	       //console.log('we called it');
	 		  	       //console.log($jq('#'+document.querySelectorAll('[data-id = "iniTerm"]')[0].getAttribute('id')));
	 		  	       document.querySelectorAll('[data-id = "iniTerm1"]')[0].style.display='none';
	 		  	       document.querySelectorAll('[data-id = "iniTerm2"]')[0].style.display='none';
	 		  	       
	 		  	   }else{
	 		  	       document.querySelectorAll('[data-id = "iniTerm1"]')[0].style.display='block'; 
	 		  	       document.querySelectorAll('[data-id = "iniTerm2"]')[0].style.display='block'; 
	 		  	       
	 		  	   }
	 		  	};
	 		 })
      	</script>

   
	    	    
	  </apex:form>
	</apex:define>
  </apex:composition>	  
</apex:page>